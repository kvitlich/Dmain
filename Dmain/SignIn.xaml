<Page x:Class="Dmail.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dmail"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignIn">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Email:" FontSize="54" Grid.Row="0"/>
        <TextBox Grid.Row="1" x:Name="EmailTextBox" FontSize="32"/>
        <TextBlock Text="Password:" FontSize="54" Grid.Row="2"/>
        <TextBox Grid.Row="3" x:Name="PasswordTextBox" FontSize="32"/>
        <Button Content="Enter" FontSize="32" x:Name="signIn" Grid.Row="4" Margin="380,0,0,0" Height="45" Width="150" Click="Enter"/>
    </Grid>
</Page>
